{
    "manifest_version": 3,
    "name": "LeetCode Spaced Repetition",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "webRequest"
        ],
    "host_permissions": [
        "*://leetcode.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://leetcode.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
